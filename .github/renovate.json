{
  "extends": [
    "config:best-practices",
    ":automergeAll",
    "schedule:automergeEarlyMondays"
  ],
  "platformAutomerge": true,
  "recreateWhen": "always",
  "packageRules": [
    {
      "matchPackagePrefixes": ["eslint-plugins"],
      "groupName": "ESLint Plugins"
    },
    {
      "matchPackagePrefixes": ["@typescript-eslint"],
      "groupName": "TypeScript Preset"
    }
  ]
}
